<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F1FFFE"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:context=".MainActivity">


        <RelativeLayout
            android:id="@+id/rl_vector_container"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/imgcar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="TODO"
                app:srcCompat="@drawable/ic_bahamrah_2" />

            <ImageView
                android:id="@+id/img_location"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="TODO"
                app:srcCompat="@drawable/ic_location" />


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_send_sms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/txt_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/colorTextBlue"
                    android:text="@string/enterNumber" />

            </FrameLayout>


            <EditText
                android:id="@+id/editTextNumberPassword"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:background="@drawable/edt_num_back"
                android:ems="10"
                android:gravity="center"
                android:hint="@string/etd_number_hint"
                android:inputType="number"
                android:padding="6dp"
                android:textSize="16sp"
                android:maxLength="10"
                android:drawableStart="@drawable/ic_baseline_mobile_screen_share_24"
                android:textColor="@color/colorTextBlueDark"
                android:textColorHint="@android:color/darker_gray" />

            <Button
                android:id="@+id/btn_send_num"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:padding="11dp"
                android:text="@string/receiveCode"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_get_sms"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_timer_container"
                android:layout_width="200dp"
                android:layout_height="32dp"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/iran_yekan_bold_num"
                    android:text="@string/timer_text" />

                <TextView
                    android:id="@+id/txt_edit_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center"
                    android:text="@string/edit_number"
                    android:textColor="@android:color/holo_blue_light"
                    android:textSize="12sp" />

            </RelativeLayout>


            <EditText
                android:id="@+id/editGetCode"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:background="@drawable/edt_num_back"
                android:ems="10"
                android:drawableStart="@drawable/ic_baseline_lock_24"
                android:textSize="16sp"
                android:gravity="center"
                android:hint="@string/enter_code"
                android:inputType="number"
                android:maxLength="4"
                android:padding="6dp"
                android:textColor="@color/colorTextBlueDark"
                android:textColorHint="@android:color/darker_gray" />

            <Button
                android:id="@+id/btn_send_code"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:padding="11dp"
                android:text="@string/send_code"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>
