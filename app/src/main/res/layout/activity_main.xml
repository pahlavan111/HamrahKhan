<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1FFFE"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/rl_vector_container"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/imgcar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="TODO"
            app:srcCompat="@drawable/ic_behamrah" />

        <ImageView
            android:id="@+id/img_location"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="TODO"
            app:srcCompat="@drawable/ic_location" />


    </RelativeLayout>


    <TextView
        android:id="@+id/txt_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="شماره همراه خود را وارد کنید" />

    <EditText
        android:id="@+id/editTextNumberPassword"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:background="@drawable/edt_num_back"
        android:ems="10"
        android:gravity="center"
        android:hint="09*********"
        android:inputType="number"
        android:padding="4dp"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray" />

    <Button
        android:id="@+id/button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:padding="11dp"
        android:text="دریافت کدفعال سازی"
        android:textColor="@android:color/white"
        android:textSize="12sp" />


</LinearLayout>