<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/path_item_back"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:orientation="horizontal"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTextStationTitle"
                    android:text="مقصد"
                    android:textSize="11sp"
                    android:layout_marginStart="16dp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="8dp"/>
                <LinearLayout
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:paddingBottom="4dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/txt_destination"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorTextDestination"
                        tools:text="میدان ولی عصر"
                        android:textSize="11sp"
                        android:layout_marginEnd="4dp"
                        />




                </LinearLayout>



            </RelativeLayout>
            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="0.15"
                android:layout_marginEnd="4dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txt_plan_count"
                    android:layout_centerInParent="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTextStationTitle"
                    android:textSize="10sp"
                    android:text="4"
                    />
                <TextView
                    android:id="@+id/txt_ticket"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTextStationTitle"
                    android:fontFamily="@font/iran_yekan_mobile_black"
                    android:textSize="11sp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginStart="2dp"
                    android:text="DX2GDTB"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:orientation="horizontal"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTextStationTitle"
                    android:text="مبدا"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:textSize="11sp"
                    android:layout_marginEnd="16dp"/>
                <LinearLayout
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:paddingBottom="4dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/txt_station"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorTextStation"
                        tools:text="میدان ولی عصر"
                        android:textSize="11sp"
                        android:layout_marginEnd="4dp"
                        />




                </LinearLayout>



            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>